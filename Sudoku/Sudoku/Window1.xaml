<Window x:Class="Sudoku.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Difficulty" Height="279" Width="253" Background="#FF6D6F76">
    
    <Window.Resources>
        <Style TargetType="StackPanel" >
            <Setter Property="Margin" Value="0 10 0 10" />
        </Style>
        <Style x:Key="MarginRight" TargetType="Control" >
            <Setter Property="Margin" Value="0 0 20 0" />
        </Style>
    </Window.Resources>
    
    <DockPanel Margin="25 15 ">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" >
            <Button  Content="Easy" Name="SelectFileButton" 
                     Style="{StaticResource MarginRight}" />
            <Button Content="Medium" Name="saveFileButton" 
                     Style="{StaticResource MarginRight}"  />
            <Button Content="Hard" Name="ClearButton" 
                    Style="{StaticResource MarginRight}" />
        </StackPanel>
        
        <TextBox Name="ContentTb" AcceptsReturn="True" Text="Please select your difficulty level." />
    </DockPanel>
</Window>
